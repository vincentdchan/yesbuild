{
  "name": "yesbuild",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Vincent Chan <okcdz@diverse.space>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --outdir=dist --platform=node --external:esbuild --external:typescript --sourcemap",
    "build:ts": "tsc --declaration --emitDeclarationOnly --outDir dist src/index.ts",
    "watch": "esbuild --bundle src/index.ts --outdir=dist --platform=node --external:esbuild --external:typescript --sourcemap --watch"
  },
  "dependencies": {
    "esbuild": "^0.13.15"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.11.10",
    "cac": "^6.7.12",
    "chalk": "^4.1.2",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "typescript": "^4.5.2"
  }
}
