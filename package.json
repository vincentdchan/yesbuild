{
  "name": "yebuild-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "esbuild --bundle packages/yesbuild/src/index.ts --outdir=dist --platform=node --external:chokidar --external:esbuild --external:typescript --sourcemap",
    "build": "yesbuild build -t release"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@yesbuild/typescript": "workspace:^1.0.0",
    "chokidar": "^3.5.2",
    "esbuild": "^0.13.15",
    "yesbuild": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "yesbuild": "workspace:*"
    }
  }
}